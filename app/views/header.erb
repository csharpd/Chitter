<header>

    <div id="logo"><a href="/">ChitChat</a></div>
    <div id="user-links">
      <% if current_user %>
        <form method="post" action="/sessions">
          <input type="hidden" name="_method" value="delete">
          <input type="submit" value="Sign out" class='button'>
        </form>

      <% else %>
        <a href="/sessions/new" class="button">Sign in</a>
        <a href="/users/new" class="button">Sign up</a>
      <% end %>

      <% if current_user %>
      Welcome, <%=current_user.email %>
      <a href="/links/new" class="button highlighted">Peep</a>

    <div id="new-peep">
      <form action="/peeps" method="post">
        What's up Doc?: <input type="text" name="content">
        <input type="submit" value="Peep!">
      </form>
    </div>
    <% end %>

    </div>





</header>